<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    tools:context=".ResultActivity">


    <LinearLayout
        android:id="@+id/fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/linear"
            android:orientation="horizontal">
                    <Button
                        android:id="@+id/home"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/ic_baseline_insert_emoticon_24"
                        android:foreground="@drawable/ic_baseline_insert_emoticon_24">
                    </Button>

                    <EditText
                        android:id="@+id/restv"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="test"
                        android:paddingStart="15dp"
                        android:background="@drawable/rectangle"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

<!--            <Button-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:id="@+id/menubutton"-->
<!--                >-->
<!--            </Button>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/google"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/google"
                    android:foreground="@drawable/google"></Button>

                <Button
                    android:id="@+id/youtube"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/youtube"
                    android:foreground="@drawable/youtube"></Button>

                <Button
                    android:id="@+id/naver"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:foreground="@drawable/naver"></Button>

                <Button
                    android:id="@+id/wiki"
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="5dp"

                    android:layout_gravity="center"
                    android:background="@drawable/wiki"
                    android:foreground="@drawable/wiki"></Button>
            </LinearLayout>


        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

        </WebView>
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="start"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle"

        android:visibility="gone" />
</RelativeLayout>

